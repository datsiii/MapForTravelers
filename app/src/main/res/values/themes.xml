<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapForTravelers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_ya</item>
        <item name="colorPrimaryVariant">@color/red_str</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_ya</item>
        <item name="colorSecondaryVariant">@color/red_str</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.08</item>
    </style>

    <style name="Theme.MapForTravelers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MapForTravelers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MapForTravelers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>